<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    style="@android:style/Widget.ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbarStyle="insideOverlay">

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:visibility="visible"
        tools:context=".ViewRecipe">


        <RelativeLayout
            android:id="@+id/imageLayout"
            android:layout_width="wrap_content"
            android:layout_height="232dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/recipeName"
                android:layout_width="242dp"
                android:layout_height="121dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="29dp"
                android:layout_marginStart="14dp"
                android:background="#07000000"
                android:padding="12dip"
                android:text="Recipe Name"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/calorieText"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/recipeName"
                android:layout_alignParentEnd="true"
                android:background="#07000000"
                android:padding="12dip"
                android:text="Calorie Value"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:visibility="visible" />

        </RelativeLayout>


          <TextView
                android:id="@+id/recipePublisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Publisher" />


            <TextView
                android:id="@+id/ingredientsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/recipePublisher"
                android:text="Ingredients" />

            <TextView
                android:id="@+id/ingredientsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ingredientsTextView"
                android:text="1 2 3 Ingredients" />

            <TextView
                android:id="@+id/procedureTextList"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ingredientsList"
                android:text="Procedure\n"
                android:visibility="visible" />

            <TextView
                android:id="@+id/proceduresList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/procedureTextList"
                android:layout_marginTop="0dp"
                android:text="1 2 3 procedure"
                android:visibility="visible" />


     <!--   <ListView
            android:id="@+id/ingredientsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>


        <ListView
            android:id="@+id/proceduresListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredientsListView"></ListView>
-->

    </LinearLayout>
</ScrollView>